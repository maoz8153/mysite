<% subjects ||= [] %>
<% subjects.each do |subject| %>
    <h4><%= subject.name %></h4>
    <ul class="nav campaign_nav">
      <% subject.pages.visible.sorted.each do |page| %>
<li data-screen="<%=page.name%>"  class="side-nav-option">
  <a data-scope=<%=page.name%>>
    <i class="icon-globe"></i>
    <span><%= page.name %></span>
<%= link_to_unless_current(page.name, {:action => 'show', :permalink => page.permalink}) %>
  </a>
  </li>

    <% end %>
    </ul>
  <% end %>

