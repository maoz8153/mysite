<% subjects ||= [] %>
     <nav class="navbar navbar-default navbar-fixed-top " role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
              <h2><%= link_to("Maoz Web Site", root_path)%></h2>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-header">
             <span class="glyphicon glyphicon-list">Menu</span></button>
            </div>
            <div class="collapse navbar-collapse" id="navbar-header">
                <ul class="nav navbar-nav" >
                    <% subjects.each do |subject| %>
                    <li class="dropdown">

                    <a href="" class="dropdown-toggle" data-toggle="dropdown">
                    <%= subject.name %>
                    <span class="caret"></span></a>

                        <ul class="dropdown-menu" >

                        <% subject.pages.visible.sorted.each do |page| %>
                        <li><%= link_to(page.name, {:action => 'show', :permalink => page.permalink})  %></li>

                        <% end %>
                        </ul>
                </li>
                <% end %>
                </ul>
            </div>
        </div>
    </nav>
